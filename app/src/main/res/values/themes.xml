<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Button.Custom" parent="Theme.MaterialComponents.DayNight.NoActionBar" >
        <item name="colorPrimary">@color/colorAccent</item>
    </style>
    <style name="Button.Custom2" parent="Theme.MaterialComponents.DayNight.NoActionBar" >
        <item name="colorPrimary">@color/red</item>
    </style>

    <style name="AppTheme.ExpandedSearchBarStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:elevation">4dp</item>
        <item name="android:minHeight">56dp</item>
    </style>
    <style name="AppTheme.SelectableItemRippleTheme" parent="Theme.MyApplication">
        <item name="colorControlHighlight">@color/tenor_sdk_primary_color</item>
    </style>
    <style name="AppTheme.SelectableItemBackground" parent="Theme.MyApplication">
        <item name="android:theme">@style/AppTheme.SelectableItemRippleTheme</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="HorizontalLinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/tenor_sdk_primary_dark_color</item>
        <item name="android:progressBackgroundTint">@color/tenor_sdk_primary_color</item>
    </style>

</resources>